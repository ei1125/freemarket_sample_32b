.header

.category-index
  .visible-pc
    .gray
      %h2 カテゴリー一覧
    .category-list-nav
      - @category1s.each do |category1|
        .category-list-nav__list
          ="#{category1.category1_name}"

  .category-index__box
    .category-index__box__list
      - @category1s.each do |category1|
        .category-index__box__list__name
          ="#{category1.category1_name}"
          .category-index__box__list__innner-box
            %p すべて
            - @category2s.where(category1_id: category1.id).each do |category2|
              .category-index__box__list__innner-name
                ="#{category2.category2_name}"
              .category-index__box__list__innner-box__sub-box
                %p すべて
                - @category3s.where(category2_id: category2.id).each do |category3|
                  .category-index__box__list__innner-box__sub-box__name
                    ="#{category3.category3_name}"
