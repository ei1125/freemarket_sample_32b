.default-container-gray
  = render 'shared/header'

  .favorite-main
    .favorite-content
      %h2{class: "chapter-head"}
        いいね！一覧
      %ul{class: "mypage-item-list"}
        - @favorites.each do |favorite|
          %li
            .favorite-image-box
              = image_tag favorite.item.images[0].image.url
            .favorite-item-body
              .favorite-item-text
                ="#{favorite.item.name}"
              .favorite-item-text
                ="¥#{favorite.item.price.to_s(:delimited)}"





    = render 'users/mypage-leftcontent'