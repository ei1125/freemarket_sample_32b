.sighin
  %header.signin-header
    .signin-header__title
      = link_to image_tag("//www-mercari-jp.akamaized.net/assets/img/common/common/logo.svg?3761641567", alt: "mercari"), root_path
  %main.signin-main
    .signin-main__box
      .signin-main__box__login
        %p アカウントをお持ちでない方はこちら
        = link_to "新規会員登録", new_user_registration_path
      .signin-main__box__link
        #facebook-login
          %i.fab.fa-facebook-square
            = link_to "Facebookでログイン"
            -#//gemを入れてから
        #google-login
          -#//後からg素材入れる
          = link_to "Googleでログイン"
          -#//gemを入れてから
      - resource = User.new unless resource
      = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
        .signin-main__box__block__form  
          .signin-main__box__block__form__mail
            = f.email_field :email, autofocus: true, autocomplete: "email", class: "login-input-text input-default"
          .signin-main__box__block__form__password
            = f.password_field :password, autocomplete: "current-password"
            .has-error
              = flash[:alert]
          .signin-main__box__block__form__robot
            //gemを入れてから
          = f.submit "ログイン", class: "login-submit btn-default btn-red"
          =link_to "パスワードをお忘れの方"
    %footer.signup-footer
      %nav
        %ul.signup-footer__list.clearfix
          %li
            = link_to('プライバシーポリシー', "https://www.mercari.com/jp/privacy/")
          %li
            = link_to('メルカリ利用規約', "https://www.mercari.com/jp/tos/")
          %li
            = link_to('特定商取引に関する表記', "https://www.mercari.com/jp/tokutei/")
          .signup-footer__list__bottom.clearfix:after
      = link_to image_tag('https://www-mercari-jp.akamaized.net/assets/img/common/common/logo-gray.svg?2296184308', alt: 'mercari', height: '65', width: '80', class: 'signup-footer__logo'), "https://www.mercari.com/jp/"
      %p
        %small© 2019 Mercari