.new-container
  = render partial: 'shared/login-header'
  .new-container__main
    .new-container__main--box
      %h2 新規会員登録
      -# = form_with(model: @user, url: user_registration_path, id: 'new_user', class: 'new_user', local: true) do |f|
      .form
        = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
          = render "devise/shared/error_messages", resource: resource
          .field
            = f.label :nickname
            %br/
            = f.text_field :nickname, autofocus: true
          .field
            = f.label :email
            %br/
            = f.email_field :email, autofocus: true, autocomplete: "email"
          .field
            = f.label :password
            - if @minimum_password_length
              %em
                (#{@minimum_password_length} characters minimum)
            %br/
            = f.password_field :password, autocomplete: "new-password"
          .field
            = f.label :password_confirmation
            %br/
            = f.password_field :password_confirmation, autocomplete: "new-password"
          = f.fields_for :identities do |identity|
            .field
              = identity.label :familyname
              %br/
              = identity.text_field :familyname
            .field
              = identity.label :firstname
              %br/
              = identity.text_field :firstname
            .field
              = identity.label :familyname_kana
              %br/
              = identity.text_field :familyname_kana
            .field
              = identity.label :firstname_kana
              %br/
              = identity.text_field :firstname_kana
            .field
              %span.changecolor 生年月日
              %br/
              = identity.date_select(:birthday,start_year:Time.now.year,prompt:"--",use_month_numbers:true, end_year:1900)
              - if @user.errors[:lastname_kana].any?
                %p.errorsmessage 生年月日を入力してください
          = f.submit "Sign up"
= render partial: 'shared/login-footer'