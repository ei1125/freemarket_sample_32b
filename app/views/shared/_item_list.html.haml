.items-box
  = link_to item_path(id: item.id) do
    %figure
    - item.images.each_with_index do |item_image,i|
      -if i == 0
        = image_tag item_image.image.url, width: "188", height: '160'
  .items-box__body
    %h3{class: "items-box__name"}
      ="#{item.name}"
    .items-box__num
      .items-box__body__num__price
        ="¥#{item.price}"
      .items-box__body__num__like
        -if Favorite.includes(:user).where(user_id: current_user.id).find_by(item_id: item.id).present?
          .hidden-favorite_on{data: { index: item.id}}
            %i{class: "far fa-heart", id: "favorite_btn_off"}
          .appeared-favorite_on{data: { index: item.id}}
            %i{class: "fas fa-heart", id: "favorite_btn_on", style:"color: red;"}
        -else
          .appeared-favorite_off{data: { index: item.id}}
            %i{class: "far fa-heart", id: "favorite_btn_off"}
          .hidden-favorite_off{data: { index: item.id}}
            %i{class: "fas fa-heart", id: "favorite_btn_on", style:"color: red;"}
      %span 10


